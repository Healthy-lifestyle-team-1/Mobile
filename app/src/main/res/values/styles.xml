<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HealthyLifeBackButton" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:elevation">0dp</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_24</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="TextTitleStyle" parent="HealthyLifestyleTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HealthyLifestyleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">1.6sp</item>
        <item name="android:translationY">-0.8sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>