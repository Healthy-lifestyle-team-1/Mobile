<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HealthyLifestyle" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.HealthyLifestyle" parent="Base.Theme.HealthyLifestyle">
        <item name="colorPrimary">@color/not_milk</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="cardViewStyle">@style/MyCardViewStyle</item>
    </style>

    <style name="MyCardViewStyle">
        <item name="cardBackgroundColor">@color/not_milk</item>
    </style>

    <style name="ImageLogo">
        <item name="android:src">@drawable/logo</item>
    </style>

    <style name="ImageNext">
        <item name="android:src">@drawable/next</item>
    </style>

    <style name="ImageProfile">
        <item name="android:src">@drawable/profile_green</item>
    </style>


    <style name="SalmonBackground">
        <item name="android:background">@color/salmon</item>
    </style>

    <style name="cardSalmonBackground">
        <item name="cardBackgroundColor">@color/salmon</item>
    </style>

    <style name="cardBlueBackground">
        <item name="cardBackgroundColor">@color/light_blue</item>
    </style>


    <style name="ButtonPlus">
        <item name="android:background">@drawable/button_plus</item>
    </style>

    <style name="filter">
        <item name="android:src">@drawable/filter</item>
    </style>

    <style name="FabRound">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>