<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthyLifestyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/bone</item>
        <item name="colorPrimaryDark">@color/text_main</item>
        <item name="android:windowBackground">@color/text_main</item>
        <item name="android:colorBackground">@color/text_main</item>
        <item name="cardViewStyle">@style/MyCardViewStyle</item>
    </style>

    <style name="MyCardViewStyle">
        <item name="cardBackgroundColor">@color/text_main</item>
    </style>


    <style name="ImageLogo">
        <item name="android:src">@drawable/logo_dark</item>
    </style>

    <style name="ImageNext">
        <item name="android:src">@drawable/next_dark</item>
    </style>

    <style name="ImageProfile">
        <item name="android:src">@drawable/profile_dark</item>
    </style>

    <style name="SalmonBackground">
        <item name="android:background">@color/salmon_dark</item>
    </style>

    <style name="cardSalmonBackground">
        <item name="cardBackgroundColor">@color/salmon_dark</item>
    </style>

    <style name="cardBlueBackground">
        <item name="cardBackgroundColor">@color/blue_card_dark</item>
    </style>

    <style name="ButtonPlus">
        <item name="android:background">@drawable/button_plus_dark</item>
    </style>

    <style name="filter">
        <item name="android:src">@drawable/filter_dark</item>
    </style>

    <style name="cardImage">
        <item name="android:background">@drawable/shadow</item>
        <item name="android:textColor">@color/bone</item>
    </style>

    <style name="input">
        <item name="background">@drawable/radius_input_dark</item>
    </style>


</resources>