<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/onboarding_three"
        android:contentDescription="@string/image" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:background="@drawable/onboarding_threes"
        android:contentDescription="@string/image" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/rubik"
            android:text="@string/method_three"
            android:textColor="@color/text_main"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/rubik"
            android:text="@string/method_title"
            android:textColor="@color/bone"
            android:textSize="20sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="@string/image"
                android:src="@drawable/onboarding_image_three" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="230dp"
                android:contentDescription="@string/image"
                android:src="@drawable/img_two" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="88dp"
                android:layout_marginEnd="30dp"
                android:contentDescription="@string/image"
                android:src="@drawable/img_three" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="250dp"
                android:layout_marginEnd="35dp"
                android:contentDescription="@string/image"
                android:src="@drawable/img_four" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="60dp"
                android:contentDescription="@string/image"
                android:src="@drawable/img_five" />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="64dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:contentDescription="@string/image"
                android:src="@drawable/img_one" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/rubik"
            android:text="@string/onboarding_description_three"
            android:textColor="@color/text_main"
            android:textSize="16sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_arrange"
            android:fontFamily="@font/rubik"
            android:text="@string/resume"
            android:textAllCaps="false"
            android:textColor="@color/text_main"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/image"
            android:src="@drawable/rectangle" />


    </LinearLayout>

</FrameLayout>